{
  "compilerOptions": {
    "target": "es2019", // Or a higher ES version depending on your target environment
    "module": "commonjs", // Or "esnext" for ES Modules
    "lib": ["es2019"], // Include necessary DOM or other environment libraries if needed
    "declaration": true, // Generate .d.ts declaration files
    "outDir": "./dist", // Output directory for compiled JavaScript and declaration files
    "rootDir": "./src", // Root directory of your TypeScript source files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables better interoperability with CommonJS modules
    "skipLibCheck": true, // Skips type checking of declaration files
    "forceConsistentCasingInFileNames": true // Ensures consistent casing in file names
  },
  "include": ["src/**/*.ts"], // Include all .ts files in the src directory
  "exclude": ["node_modules", "dist", "**/*.test.ts"] // Exclude node_modules, output directory, and test files
}
